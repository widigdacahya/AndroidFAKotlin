<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/teal_200"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/et_edit_file_mainUI"
        style="@style/Widget.AppCompat.EditText"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:background="@color/white"
        android:gravity="top|start"
        android:inputType="textMultiLine|textNoSuggestions"
        android:padding="@dimen/tiny_margin"
        android:layout_below="@id/linlayout_header_linear_MainUI"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:id="@+id/linlayout_header_linear_MainUI"
        android:orientation="horizontal"
        android:gravity="center_horizontal|start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_new_mainUI"
            style="@style/Widget.AppCompat.Button.Colored"
            android:text="@string/file_new"
            android:layout_marginBottom="@dimen/tiny_margin"
            android:layout_width="72dp"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/btn_open_mainUI"
            style="@style/Widget.AppCompat.Button.Colored"
            android:text="@string/file_open"
            android:layout_marginBottom="@dimen/tiny_margin"
            android:layout_marginStart="@dimen/tiny_margin"
            android:layout_width="72dp"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/btn_save_mainUI"
            style="@style/Widget.AppCompat.Button.Colored"
            android:text="@string/file_save"
            android:layout_marginBottom="@dimen/tiny_margin"
            android:layout_marginStart="@dimen/tiny_margin"
            android:layout_width="72dp"
            android:layout_height="match_parent"/>

        <EditText
            android:id="@+id/et_edit_title_mainUI"
            android:layout_marginBottom="@dimen/tiny_margin"
            android:layout_marginStart="@dimen/tiny_margin"
            android:layout_weight="1"
            android:background="@color/white"
            android:ems="10"
            android:hint="@string/title"
            android:padding="@dimen/tiny_margin"
            android:inputType="textPersonName|textNoSuggestions"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>


    </LinearLayout>


</RelativeLayout>