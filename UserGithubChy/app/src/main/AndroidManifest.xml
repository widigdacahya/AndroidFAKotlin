<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cahyadesthian.learnexercisethree">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LearnExerciseThree">
        <activity
            android:name=".ui.activity.SettingActivity"
            android:parentActivityName=".ui.activity.MainActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activity.FavouriteActivity"
            android:parentActivityName=".ui.activity.MainActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activity.DetailUserActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activity.MainActivity"
            android:launchMode="singleTop"
            android:theme="@style/SomeSplash"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>