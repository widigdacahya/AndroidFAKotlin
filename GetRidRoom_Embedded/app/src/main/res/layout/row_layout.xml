<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    app:cardCornerRadius="24dp"
    android:elevation="4dp"
    android:id="@+id/cv_rown"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_id_user"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="99"
            android:textSize="48sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_age_user"
            app:layout_constraintTop_toTopOf="@+id/tv_id_user"
            app:layout_constraintBottom_toBottomOf="@id/tv_id_user"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text = "23"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_firstname_user"
            app:layout_constraintStart_toEndOf="@id/tv_id_user"
            app:layout_constraintTop_toTopOf="@id/tv_id_user"
            app:layout_constraintBottom_toBottomOf="@id/tv_id_user"
            app:layout_constraintEnd_toStartOf="@id/tv_lastname_user"
            android:layout_marginStart="12dp"
            tools:text="Cahyadesthian"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_lastname_user"
            app:layout_constraintEnd_toStartOf="@id/tv_age_user"
            app:layout_constraintStart_toEndOf="@id/tv_firstname_user"
            app:layout_constraintTop_toTopOf="@id/tv_id_user"
            app:layout_constraintBottom_toBottomOf="@id/tv_id_user"
            tools:text="Widigda"
            android:textSize="18sp"
            android:layout_marginStart="4dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_street_name_user"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="@id/tv_firstname_user"
            app:layout_constraintTop_toBottomOf="@id/tv_firstname_user"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_street_number_user"
            tools:text="Brigjen katamso Street"
            android:layout_width="wrap_content"
            android:layout_height="0dp"/>

        <TextView
            android:id="@+id/tv_street_number_user"
            app:layout_constraintStart_toEndOf="@id/tv_street_name_user"
            app:layout_constraintTop_toTopOf="@id/tv_street_name_user"
            app:layout_constraintBottom_toBottomOf="@id/tv_street_name_user"
            tools:text="99"
            android:layout_marginStart="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>