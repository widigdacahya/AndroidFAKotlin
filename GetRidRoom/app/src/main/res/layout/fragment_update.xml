<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.update.UpdateFragment">


    <ImageView
        android:id="@+id/ic_android_frag_updt"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="80dp"
        android:src="@drawable/ic_baseline_android_blue_24"
        android:layout_width="200dp"
        android:layout_height="100dp"/>

    <EditText
        android:id="@+id/edt_firstname_frag_updt"
        app:layout_constraintTop_toBottomOf="@id/ic_android_frag_updt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:hint="write first name"
        android:inputType="textPersonName"
        android:layout_marginTop="8dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/edt_lastname_frag_add"
        app:layout_constraintTop_toBottomOf="@id/edt_firstname_frag_updt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:hint="write last name"
        android:inputType="textPersonName"
        android:layout_marginTop="8dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/edt_age_frag_updt"
        app:layout_constraintTop_toBottomOf="@id/edt_lastname_frag_add"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:hint="write age here"
        android:inputType="number"
        android:layout_marginTop="8dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_update_frag_updt"
        app:layout_constraintStart_toStartOf="@id/edt_age_frag_updt"
        app:layout_constraintEnd_toEndOf="@id/edt_age_frag_updt"
        app:layout_constraintTop_toBottomOf="@id/edt_age_frag_updt"
        android:layout_marginTop="24dp"
        android:text="UPDATE"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>